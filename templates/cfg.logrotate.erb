# puppet managed
<%= @logdir %>/*.log
{
    rotate <%= @logrotate_count %>
    notifempty
    missingok
    dateformat -%Y%m%d-%s
    daily
    dateext
    maxsize <%= @logrotate_maxsize %>
    nocompress
    sharedscripts
    postrotate
        /sbin/service syslog-ng reload &>/dev/null
    endscript
}
